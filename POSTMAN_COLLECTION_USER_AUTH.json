{
  "info": {
    "name": "HaiAnhTeeth - User Authentication API",
    "description": "Collection test cho các API xác thực người dùng",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. REGISTER - Đăng ký tài khoản mới",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Nguyễn Văn A\",\n  \"email\": \"nguyenvana@example.com\",\n  \"password\": \"Password123\",\n  \"gender\": \"Male\",\n  \"dateOfBirth\": \"1990-01-15\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/register",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "register"]
        }
      },
      "response": []
    },
    {
      "name": "2. VERIFY EMAIL - Xác thực email",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/users/verify-email?token={{verification_token}}&email={{user_email}}",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "verify-email"],
          "query": [
            {
              "key": "token",
              "value": "{{verification_token}}"
            },
            {
              "key": "email",
              "value": "{{user_email}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. LOGIN - Đăng nhập",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"nguyenvana@example.com\",\n  \"password\": \"Password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/login",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "login"]
        }
      },
      "response": []
    },
    {
      "name": "4. GET PROFILE - Lấy thông tin hồ sơ (Require Auth)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/users/profile",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "profile"]
        }
      },
      "response": []
    },
    {
      "name": "5. FORGOT PASSWORD - Yêu cầu reset mật khẩu",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"nguyenvana@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "forgot-password"]
        }
      },
      "response": []
    },
    {
      "name": "6. VERIFY RESET PASSWORD TOKEN - Kiểm tra token reset",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/users/reset-password?token={{reset_token}}&email={{user_email}}",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "reset-password"],
          "query": [
            {
              "key": "token",
              "value": "{{reset_token}}"
            },
            {
              "key": "email",
              "value": "{{user_email}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "7. RESET PASSWORD - Đặt lại mật khẩu mới",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"email\": \"{{user_email}}\",\n  \"newPassword\": \"NewPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/reset-password",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "reset-password"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "nguyenvana@example.com",
      "type": "string"
    },
    {
      "key": "verification_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "reset_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ]
}
